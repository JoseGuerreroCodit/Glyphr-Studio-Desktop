{
  "name": "glyphr-studio-desktop",
  "version": "0.1.2",
  "description": "A desktop client for Glyphr",
  "main": "main.js",
  "dependencies": {
    "open": "0.0.5"
  },
  "devDependencies": {
    "electron-prebuilt": "^1.2.5",
    "electron-packager": "^7.1.0",
    "bower": "1.7.9"
  },
  "scripts": {
    "start": "electron .",
    "build": "npm run build-64 && npm run build-win32 && npm run build-linux32",
    "build-64": "npm run build-mac && npm run build-win && npm run build-linux",
    "build-mac": "electron-packager ./ 'Glyphr Studio' --app-bundle-id=glyphr-studio-desktop --icon=images/appicon.icns --asar --prune --out=build --overwrite=true --platform=darwin --arch=x64 --version=1.2.5 --app-version=0.1.2",
    "build-win": "electron-packager ./ 'Glyphr Studio' --app-bundle-id=glyphr-studio-desktop --version-string.FileDescription='Glyphr Studio Desktop' --icon=images/appicon.ico --asar --prune --out=build --overwrite=true --platform=win32 --arch=x64 --version=1.2.5 --app-version=0.1.2",
    "build-win32": "electron-packager ./ 'Glyphr Studio' --app-bundle-id=glyphr-studio-desktop --version-string.FileDescription='Glyphr Studio Desktop' --icon=images/appicon.ico --asar --prune --out=build --overwrite=true --platform=win32 --arch=ia32 --version=1.2.5 --app-version=0.1.2",
    "build-linux": "electron-packager ./ 'Glyphr Studio' --app-bundle-id=glyphr-studio-desktop --asar --prune --out=build --overwrite=true --platform=linux --arch=x64 --version=1.2.5 --app-version=0.1.2",
    "build-linux32": "electron-packager ./ 'Glyphr Studio' --app-bundle-id=glyphr-studio-desktop --asar --prune --out=build --overwrite=true --platform=linux --arch=ia32 --version=1.2.5 --app-version=0.1.2"
  }
}
